{
  "name": "herwa",
  "version": "0.0.1",
  "description": "Production-grade Discord bot running on Bun",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun src/index.ts",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:docker": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit --exit-code-from tester && docker-compose -f docker-compose.test.yml down -v",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "analytics:migrate": "bun src/infrastructure/analytics/migrations/runner.ts",
    "etl:run": "bun src/infrastructure/analytics/etl/run-etl.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.yml up --build",
    "docker:prod:down": "docker-compose -f docker-compose.yml down",
    "platform:seed": "bun src/scripts/seed-platform.ts"
  },
  "dependencies": {
    "@clickhouse/client": "^1.16.0",
    "@discordjs/rest": "^2.6.0",
    "chart.js": "^4.5.1",
    "chartjs-node-canvas": "^5.0.0",
    "chartjs-plugin-datalabels": "^2.2.0",
    "discord.js": "^14.15.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "ioredis": "^5.4.1",
    "pg": "^8.16.3",
    "pino": "^9.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/pg": "^8.16.0",
    "bun-types": "^1.3.8",
    "pino-pretty": "^13.1.3"
  }
}
