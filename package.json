{
  "name": "herwa",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "nodemon",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build --remove-orphans",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.yml up --build --remove-orphans",
    "docker:prod:down": "docker-compose -f docker-compose.yml down"
  },
  "keywords": [
    "discord bot",
    "analysis",
    "statistics"
  ],
  "author": "Nellow",
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/pg": "^8.16.0",
    "nodemon": "^3.1.3",
    "pino-pretty": "^13.1.3",
    "rimraf": "^5.0.7",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@discordjs/rest": "^2.6.0",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.16.3",
    "pino": "^9.2.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  }
}